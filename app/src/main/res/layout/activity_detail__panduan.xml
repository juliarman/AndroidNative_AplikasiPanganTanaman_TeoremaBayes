<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panduan.Detail_Panduan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/detailpanduanbackground"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/jagung"
            />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/judullll"
            android:padding="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:gravity="center"
            android:text="Pemberian Jagung"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/deskripsiiiii"
        android:layout_below="@+id/judullll"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0d0d0d"

        />






    </RelativeLayout>

</ScrollView>